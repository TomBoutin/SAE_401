{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
        }
        .section {
            margin: 5rem 1.25rem;
            font-family: 'Open Sans', sans-serif;
        }
        @media (min-width: 640px) {
            .section {
                margin: 5rem 5rem;
            }
        }
        .section h2 {
            font-size: 2.25rem;
            font-weight: 700;
        }
        .form-container {
            margin-top: 2.5rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }
        .form-container input {
            padding: 0.5rem;
            background-color: transparent;
            color: #ffffff;
            border: 2px solid #ffffff;
            border-radius: 0.5rem;
            padding-left: 1rem;
            font-size: 1.125rem;
            width: 16rem;
        }
        .form-container input:focus {
            outline: #E7002F auto 5px;
        }
        .form-container button {
            margin-top: 2rem;
            background-color: #E7002F;
            color: #ffffff;
            border: none;
            border-radius: 0.5rem;
            padding: 0.5rem 1rem;
            font-size: 1.125rem;
            cursor: pointer;
            width:16rem;
        }
        .form-container button:hover {
            outline: 2px solid #ffffff;
            background-color: #E7002F;
        }
        .register-link {
            margin-top: 2.5rem;
            font-size: 1.125rem;
            style: none;
        }
        .register-link span {
            color: #E7002F;
        }
    </style>

    <section class="section">
        <h2>S'inscrire</h2>

        {{ form_start(registrationForm, {'attr': {'class': 'form-container'}}) }}
            {{ form_row(registrationForm.email, {
        'label': false,
        'attr': {'placeholder': 'Email'}
    }) }}
    {{ form_row(registrationForm.plainPassword, {
        'label': false,
        'attr': {'placeholder': 'Mot de passe'}
    }) }}
    {{ form_row(registrationForm.pseudo, {
        'label': false,
        'attr': {'placeholder': 'Pseudo'}
    }) }}
            {{ form_row(registrationForm.agreeTerms) }}

            <p>Vous avez déjà un compte ? <a href="http://localhost:8090/login" class="register-link"><span>Connectez-vous</span></a></p>

            <button type="submit">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </section>
{% endblock %}